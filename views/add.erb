<h3><%= @title %></h3>
<form method = 'post' action = "<%= @path %>">
	<label><%= @label %></label>
	<input name = <%= @input_name %> value = <%= @input_value %>>

	<% if @title == "Add Expense" %>
		<br><br>
		<label>Cost:</label>
		<input name = 'cost' value = "$<%= params['cost'] %>">
	<% end %>
	
	<br><br>
	<button type = 'submit'>Submit</button>
</form>